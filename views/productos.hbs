</head>

<body class="bg-light">

    <header class="encabezado">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">Pagina Principal</li>
            </ol>
        </nav>

        <h1 class="encabezado__titulos display-4">PROYECTO SEGUNDA ENTREGA ENTREGA</h1>

    </header>

    <main>

        <section>

            <!--INICIO FORMULARIO DE PRODUCTOS-->
            <form id="productoAgregar" class="row g-6">
                <!-- CARD 1 -->
                <div class="col-xl-6 col-md-10 mb-5 d-inline-flex">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1 ui-widget">
                                    <label for="nombreProducto" class="form-label">NOMBRE DEL PRODUCTO</label>
                                    <input type="text" class="form-control" id="nombreProducto" name="nombreProducto"
                                        required>
                                </div>
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1 ui-widget">
                                    <label for="precioProducto" class="form-label">PRECIO DEL PRODUCTO</label>
                                    <input type="number" class="form-control" id="precioProducto" name="precio"
                                        required>
                                </div>
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1 ui-widget">
                                    <label for="urlProducto" class="form-label">URL</label>
                                    <input type="text" class="form-control" id="urlProducto" name="urlProducto"
                                        required>
                                </div>

                                <!-- BOTON DE ENVIO -->

                                <div class="col-12 d-inline-flex">
                                    <input type="submit" class="btn btn-outline-success" value="ENVIAR DATOS"
                                        id="botonEnvioDatos">
                                </div>

                            </div>

                        </div>
                        <!--LISTADOS DE PRODUCTOS-->

                        <h2>DATOS ENVIADOS PRODUCTO</h2>

                        <div id="hbsTablaProductos">


                        </div>
                        <!--FIN LISTADOS DE PRODUCTOS-->

                    </div>

                </div>
            </form>
            <!--FIN DE FORMULARIO-->

            <!--MENSAJES-->
            <form id="mensajeAgregar" class="row g-6">
                <!-- CARD 1 -->
                <div class="col-xl-6 col-md-10 mb-5 d-inline-flex">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1 ui-widget">
                                    <label for="idNombre" class="form-label">ID USUARIO</label>
                                    <input type="text" class="form-control" id="idNombre" name="idNombre" required>
                                </div>
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1 ui-widget">
                                    <label for="msjApellido" class="form-label">APELLIDO</label>
                                    <input type="text" class="form-control" id="msjApellido" name="msjApellido"
                                        required>
                                </div>
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1 ui-widget">
                                    <label for="msjEmail" class="form-label">EMAIL</label>
                                    <input type="text" class="form-control" id="msjEmail" name="msjEmail" required>
                                </div>
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1 ui-widget">
                                    <label for="msjEdad" class="form-label">EDAD</label>
                                    <input type="text" class="form-control" id="msjEdad" name="msjEdad" required>
                                </div>
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1 ui-widget">
                                    <label for="msjAlias" class="form-label">ALIAS</label>
                                    <input type="text" class="form-control" id="msjAlias" name="msjAlias" required>
                                </div>
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1 ui-widget">
                                    <label for="msjAvatar" class="form-label">AVATAR</label>
                                    <input type="text" class="form-control" id="msjAvatar" name="msjAvatar" required>
                                </div>
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1 ui-widget">
                                    <label for="mensajeContenido" class="form-label">MENSAJE</label>
                                    <input type="text" class="form-control" id="mensajeContenido"
                                        name="mensajeContenido" required>
                                </div>

                                <!-- BOTON DE ENVIO -->

                                <div class="col-12 d-inline-flex">
                                    <input type="submit" class="btn btn-outline-success" value="ENVIAR MENSAJE"
                                        id="botonEnvioMensajes">
                                </div>
                            </div>

                        </div>
                        <!--LISTADOS DE MENSAJES-->

                        <div id="mensajesChat">


                        </div>
                        <!--FIN LISTADOS DE MENSAJES-->
                    </div>

                </div>
            </form>
            <!--FIN DE FORMULARIO-->

        </section>

        <footer class="sticky-footer bg-white">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright &copy; <a href="#" target="_blank">EJERCICIOS DE PRACTICA</a></span>
                </div>
            </div>
        </footer>
    </main>
    <!--JAVASCRIPT LADO DEL CLIENTE-->

    <script src="productosLadoCliente.js"></script>

    <!--BOOTSTRAP-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
